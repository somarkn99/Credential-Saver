{
  "manifest_version": 3,
  "name": "Credential Saver",
  "version": "1.0",
  "description": "Save and auto-fill login credentials with one click",
  "permissions": [
    "storage",
    "activeTab",
    "declarativeContent",
    "webRequest",
    "webRequestBlocking",
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
